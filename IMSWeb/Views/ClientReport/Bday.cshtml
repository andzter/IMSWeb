
@using MVCGrid.Web
@using IMSWeb.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";


    ViewBag.Title = "January";


    string mon = Request.QueryString["mon"];


    if (mon == "2") { ViewBag.Title = "February"; }
    if (mon == "3") { ViewBag.Title = "March"; }
    if (mon == "4") { ViewBag.Title = "April"; }
    if (mon == "5") { ViewBag.Title = "May"; }
    if (mon == "6") { ViewBag.Title = "June"; }
    if (mon == "7") { ViewBag.Title = "July"; }
    if (mon == "8") { ViewBag.Title = "August"; }
    if (mon == "9") { ViewBag.Title = "September"; }
    if (mon == "10") { ViewBag.Title = "October"; }
    if (mon == "11") { ViewBag.Title = "November"; }
    if (mon == "12") { ViewBag.Title = "December"; }



}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Clients Birthday
                    <small>@ViewBag.Title</small>
                </h2>
            </div>
            <div class="body table-responsive">

                @Html.Partial("_MVCGridToolbar", new MVCGridToolbarModel()
           {
               MVCGridName = "Bday",
               PageSize = true,
               ColumnVisibility = true,
               Export = true,
               GlobalSearch = true
           })
                @Html.MVCGrid("Bday", new { mon =  int.Parse(Request.QueryString["mon"]) })
            </div>
        </div>

    </div>


</div>

